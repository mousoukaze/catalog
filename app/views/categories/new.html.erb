<h1>Create a new category</h1>

<%= form_with model: @category do |form| %>
  <div>
    <%= form.label "Category Name" %><br>
    <%= form.text_field :name %>
    <% @category.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label "Parent Category" %><br>
    <%= form.collection_select( :parent, @categories, :id, :name, selected: nil, include_blank: true ) %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>

<%= button_to "Back to Category List", categories_path, method: :get %>
